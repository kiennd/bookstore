<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="store" namespace="/admin/store" extends="struts-default">
		<action name="index" class="control.backend.StoreAction" method="indexAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="store">
				<param name="operationMode">RETRIEVE</param>
			</interceptor-ref>
			<result name="success">index.jsp</result>
		</action>

		<action name="edit" class="control.backend.StoreAction" method="editAction">
			<result name="success">edit.jsp</result>
		</action>

		<action name="save" class="control.backend.StoreAction" method="saveAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<result name="success">index.jsp</result>
			<result name="error">edit.jsp</result>
		</action>

		<action name="delete" class="control.backend.StoreAction" method="deleteAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="store">
				<param name="operationMode">STORE</param>
			</interceptor-ref>
			<result name="success" type="redirectAction">index</result>
		</action>
		<action name="new" class="control.backend.StoreAction" method="newAction">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="store">
				<param name="operationMode">AUTOMATIC</param>
			</interceptor-ref>
			<result name="success" type="redirectAction">index</result>
			<result name="error">new.jsp</result>
		</action>
	</package>


</struts>